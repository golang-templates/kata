{
    "go.useLanguageServer": true,
    "go.coverOnSave": true,
    "go.lintOnSave": "package",
    "go.lintTool": "staticcheck",
    "[go]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit",
        },
    },
    "[go.mod]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit",
        },
    }
}
